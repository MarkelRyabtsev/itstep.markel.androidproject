<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/color_blue_project</item>
        <item name="colorControlHighlight">@color/color_white_project</item>
    </style>

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/color_blue_project</item>
        <item name="colorControlNormal">@color/color_blue_project</item>
        <item name="colorControlActivated">@color/color_blue_project</item>
        <item name="colorControlHighlight">@color/color_blue_project</item>
    </style>

    <style name="SwitchStyle" parent="Base.Widget.AppCompat.CompoundButton.Switch">
        <item name="colorAccent">@color/color_blue_project</item>
    </style>

    <style name="CheckboxStyle" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorAccent">@color/color_blue_project</item>
    </style>

    <style name="RadioButtonStyle" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorAccent">@color/color_blue_project</item>
        <item name="android:textSize">14dp</item>
    </style>

</resources>
